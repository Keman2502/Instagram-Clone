
<div class="row" style= "background: #fafafa">
  <div class="col-md-6">
    <%= image_tag asset_url('home.png'), :style => "margin-left: 20%; margin-top:2%"  %>
  </div>

  <div class="col-md-6">
  <div class= "container" style= "margin-top: 10%; padding: 16%; padding-left: 4%">
    <h2 style= "font-family: 'Style Script', cursive; font-size: 260%; font-weight: bolder; text-align: center">Instagram</h2>
      <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" , placeholder: "Enter your email"%>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password" , class: "form-control", placeholder: "Enter your password"%>
    </div>
    <br>
    <div class="actions">
    <%= f.submit "Log in" ,class: "btn btn-primary form-control"%>
    </div>
    <% end %>
  </div>
    <%# <%= render "devise/shared/links" %>
  </div>
</div>


